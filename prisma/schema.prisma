generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Job {
  id             Int         @id @default(autoincrement())
  positionName   String
  theRole        String
  skillsRequired Json
  benefits       Json
  applicants     Applicant[] @relation("JobApplicants")
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model Applicant {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  jobs      Job[]    @relation("JobApplicants")
  appliedAt DateTime @default(now())
}
