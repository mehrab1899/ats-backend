generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Job {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  applications Application[]
}

model Application {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  resume   String
  job      Job    @relation(fields: [jobId], references: [id])
  jobId    Int
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
