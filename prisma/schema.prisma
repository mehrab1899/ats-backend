generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Stage {
  APPLIED
  SHORTLISTED
  INTERVIEWED
  HIRED
  REJECTED
}

enum JobStatus {
  OPEN
  CLOSED
  DRAFT
}

model Admin {
  id String @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
}

model Job {
  id String @id @default(uuid())
  title          String      
  description    String      
  skillsRequired Json
  benefits       Json
  status         JobStatus   @default(OPEN) // Replaces need for archived boolean
  applicants     Applicant[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model Applicant {
  id String @id @default(uuid())
  name      String
  email     String   @unique
  stage     Stage    @default(APPLIED)
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  appliedAt DateTime @default(now())
}
